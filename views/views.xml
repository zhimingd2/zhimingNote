<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_zhiming_note_tree">
      <field name="name">view.zhiming.note.tree</field>
      <field name="model">zhiming.note</field>
      <field name="arch" type="xml">
          <tree string="Note Main Tree">
            <field name="name"/>
          </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="zhiming_note.action_window">
      <field name="name">zhiming Note</field>
      <field name="res_model">zhiming.note</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
          <p class="oe_view_nocontent_create">View Note</p>
          <p> View</p>
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="zhimingNote" id="zhiming_note.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="zhiming_note.menu_1" parent="zhiming_note.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="zhiming_note.menu_1_list" parent="zhiming_note.menu_1"
              action="zhiming_note.action_window"/>
  </data>
</odoo>